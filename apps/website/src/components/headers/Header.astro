---
const { overline, title } = Astro.props;
import DashboardAnimation from "../interactive/DashboardAnimation.astro";
---

<section>
  <div
    class="mx-auto 2xl:max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 my-12 lg:my-32 items-center"
  >
    <div class="lg:text-center">
      <h1 class="inline-flex items-center text-blue-600">
        <span class="text-base font-medium tracking-tight">{overline}</span>
      </h1>
      <h2
        class="text-blue-950 font-semibold mt-6 text-4xl lg:text-7xl tracking-tight"
      >{title}</h2>
    </div>
    <div class="pt-12">
      <div class="mx-auto justify-center">
        <div class="ring-1 ring-slate-300 bg-slate-100 rounded-2xl p-3">
          <DashboardAnimation />
        </div>
      </div>
    </div>
  </div>
</section>
