    links: [
      { href: "/legal/ethics", label: "Ethikrichtlinie" },
      { href: "/blog", label: "Blog" },
      { href: "/helpdesk", label: "Helpdesk" },
      {
        href: "https://billing.wemake.cx/p/login/14k14gcHy75I2GYcMM",
        label: "Rechnungsportal"
      }
    ]
  },
  {
    title: "Company",
    links: [
      {
        href: "/about-us",
        label: "Über uns"
      },
      {
        href: "/career",
        label: "Karriere"
      },
      {
        href: "/career/open-roles",
        label: "Offene Stellen (0)"
      },
      {
        href: "/community/discord",
