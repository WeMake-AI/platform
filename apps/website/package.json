{
  "name": "website",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "bun run generate-types && astro check && astro build",
    "preview": "bun run generate-types && astro build && wrangler dev --remote --env staging",
    "astro": "astro",
    "deploy": "bun run build && wrangler deploy --env staging",
    "deploy:prod": "bun run build && wrangler deploy",
    "check": "astro check",
    "generate-types": "wrangler types && prettier worker-configuration.d.ts --write",
    "type-check": "bun run generate-types && bun tsc",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.5.0",
    "@astrojs/mdx": "4.2.4",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.3.0",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "5.7.4",
    "astro-seo": "^0.8.4",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250421.0",
    "@tailwindcss/typography": "^0.5.16"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild",
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "workerd"
    ]
  }
}
