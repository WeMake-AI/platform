{
  "name": "@wemake-ai/platform",
  "version": "0.0.12",
  "author": "WeMake (https://wemake.cx)",
  "bugs": "https://github.com/WeMake-AI/mcp/issues",
  "description": "Official WeMake Platform",
  "homepage": "https://wemake.cx",
  "license": "BSL-1.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "resolutions": {
    "@wemake/*": "workspace:*"
  },
  "scripts": {
    "website:dev": "bun run --cwd apps/website dev",
    "website:build": "bun run --cwd apps/website build",
    "website:preview": "wrangler dev --remote --config apps/website/wrangler.jsonc",
    "website:deploy:staging": "wrangler deploy --env staging --config apps/website/wrangler.jsonc",
    "website:deploy": "wrangler deploy --config apps/website/wrangler.jsonc",
    "website:generate-types": "wrangler types --config apps/website/wrangler.jsonc",
    "check": "bun run tsc && bun run lint && bun run prettier",
    "format": "bun run lint:fix && bun run prettier:fix",
    "tsc": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.58",
    "@cloudflare/workers-types": "^4.20250731.0",
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "markdownlint": "^0.38.0",
    "prettier": "^3.6.2",
    "wrangler": "^4.26.1"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 80,
    "proseWrap": "always",
    "singleQuote": false,
    "semi": true,
    "useTabs": false
  }
}
