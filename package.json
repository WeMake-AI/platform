{
  "name": "@wemake-ai/platform",
  "version": "0.0.1",
  "author": "WeMake (https://wemake.cx)",
  "bugs": "https://github.com/WeMake-AI/mcp/issues",
  "description": "WeMake Model Context Protocol (MCP) servers",
  "homepage": "https://wemake.cx",
  "license": "BSL-1.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "modules/*",
    "packages/*"
  ],
  "resolutions": {
    "@wemake/*": "workspace:*"
  },
  "scripts": {
    "dev": "bun --cwd apps/website dev",
    "build": "bun --cwd apps/website build",
    "deploy": "bun --cwd apps/website wrangler deploy",
    "format": "prettier --write .",
    "test": "bun test"
  },
  "devDependencies": {
    "markdownlint": "^0.38.0",
    "prettier": "^3.6.2",
    "wrangler": "^4.12.0"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 80,
    "proseWrap": "always",
    "singleQuote": false,
    "semi": true,
    "useTabs": false
  }
}
