{
  "name": "monolith",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "modules/*",
    "packages/*"
  ],
  "resolutions": {
    "@wemake/*": "workspace:*"
  },
  "scripts": {
    "dev": "bun run website:dev",
    "build": "bun run website:build",
    "deploy": "bun run --cwd apps/website wrangler deploy",
    "test": "bun test",
    "lint": "bun lint",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "wrangler": "^4.12.0"
  }
}
