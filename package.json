{
  "name": "@wemake-ai/platform",
  "version": "0.0.2",
  "author": "WeMake (https://wemake.cx)",
  "bugs": "https://github.com/WeMake-AI/mcp/issues",
  "description": "Official WeMake Platform",
  "homepage": "https://wemake.cx",
  "license": "BSL-1.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "resolutions": {
    "@wemake/*": "workspace:*"
  },
  "scripts": {
    "website:dev": "bun --cwd apps/website dev",
    "website:build": "bun --cwd apps/website build",
    "website:preview": "bun website:generate-types && bun website:build && wrangler dev --remote --env staging --config apps/website/wrangler.jsonc",
    "website:deploy:staging": "bun website:build && wrangler deploy --env staging",
    "website:deploy": "bun website:build && wrangler deploy",
    "website:generate-types": "wrangler types --config apps/website/wrangler.jsonc",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.57",
    "@cloudflare/workers-types": "^4.20250726.0",
    "markdownlint": "^0.38.0",
    "prettier": "^3.6.2",
    "wrangler": "^4.26.1"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 80,
    "proseWrap": "always",
    "singleQuote": false,
    "semi": true,
    "useTabs": false
  }
}
