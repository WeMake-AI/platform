{
  "name": "@wemake-ai/platform",
  "version": "0.0.10",
  "author": "WeMake (https://wemake.cx)",
  "bugs": "https://github.com/WeMake-AI/mcp/issues",
  "description": "Official WeMake Platform",
  "homepage": "https://wemake.cx",
  "license": "BSL-1.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "resolutions": {
    "@wemake/*": "workspace:*"
  },
  "scripts": {
    "website:dev": "bun run --cwd src/website dev",
    "website:build": "bun run --cwd src/website build",
    "website:preview": "bun run website:generate-types && bun run website:build && wrangler dev --remote --env staging --config src/website/wrangler.jsonc",
    "website:deploy:staging": "bun website:build && wrangler deploy --env staging",
    "website:deploy": "bun website:build && wrangler deploy",
    "website:generate-types": "wrangler types --config src/website/wrangler.jsonc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "check": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.58",
    "@cloudflare/workers-types": "^4.20250731.0",
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "markdownlint": "^0.38.0",
    "prettier": "^3.6.2",
    "wrangler": "^4.26.1"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 80,
    "proseWrap": "always",
    "singleQuote": false,
    "semi": true,
    "useTabs": false
  }
}
